<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag avatar_url(@user), class:"avatar-full" %>
    </div>
    <div class="card">
      <div class="card-header">Verification</div>
      <div class="card-body">
        Email Address <br>
        Phone
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.first_name %></h2>
    <div class="description row-space-3">
      <%= @user.description %>
    </div>
  </div>
</div>
