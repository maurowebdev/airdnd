<div class="row justify-content-center">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign up</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "layouts/devisemes", resource: resource %>

      <div class="form-group">

        <%= f.text_field :first_name, autofocus: true, placeholder:"First Name", class:"form-control"%>
      </div>
      <div class="form-group">

        <%= f.text_field :last_name, autofocus: true, placeholder:"Last Name", class:"form-control"%>
      </div>
      <div class="form-group">

        <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder:"Password", class:"form-control", autocomplete: "new-password" %>
      </div>

      <div class="form-group">

        <%= f.password_field :password_confirmation, placeholder:"Confirm Password", class:"form-control", autocomplete: "new-password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-normal btn-block" %>
      </div>
    <% end %>
    <hr>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-facebook btn-block" %>
    <hr>

  </div>
</div>
