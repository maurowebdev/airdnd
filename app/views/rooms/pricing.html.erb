<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu'%>
  </div>
  <div class="col-md-9">
    <div class="card">

      <div class="card-header">
        Pricing
      </div>

      <div class="card-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row justify-content-center">
              <div class="col">
                <div class="form-group">
                  <label>Price</label>
                  <%= f.text_field :price, placeholder: "e.g. $100", required: true, class:"form-control" %>
                </div>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "Save", class:"btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
